# =============================================================================
# SysArmor EDR 开发环境配置 - 极简版本
# 按服务逻辑分类，连接到远程middleware (49.232.13.155)
# =============================================================================

# 部署模式
DEPLOYMENT_MODE=distributed
ENVIRONMENT=development

# =============================================================================
# Manager服务配置 (控制平面)
# =============================================================================
MANAGER_HOST=localhost
MANAGER_PORT=8080

# 数据库配置
POSTGRES_DB=sysarmor
POSTGRES_USER=sysarmor
POSTGRES_PASSWORD=password

# =============================================================================
# Middleware服务配置 (数据中间件) - 远程部署
# =============================================================================
MIDDLEWARE_HOST=49.232.13.155       # 远程middleware服务器

# 核心端口
VECTOR_PORT=6000
KAFKA_PORT=9094
PROMETHEUS_PORT=9090

# =============================================================================
# Processor服务配置 (数据处理) - 本地部署
# =============================================================================
PROCESSOR_HOST=localhost
FLINK_PORT=8081

# =============================================================================
# Indexer服务配置 (索引存储) - 本地部署
# =============================================================================
INDEXER_HOST=localhost
OPENSEARCH_PORT=9200

# OpenSearch认证
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=admin
INDEX_PREFIX=sysarmor-events

# =============================================================================
# 网络配置 (基础设施)
# =============================================================================
SYSARMOR_NETWORK=sysarmor-net
SYSARMOR_NETWORK_EXTERNAL=false

# =============================================================================
# Wazuh集成配置 (可选功能)
# =============================================================================
WAZUH_ENABLED=false
