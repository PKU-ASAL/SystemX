{
    "index_patterns": [
        "sysarmor-alerts*"
    ],
    "template": {
        "settings": {
            "number_of_shards": 1,
            "number_of_replicas": 0,
            "refresh_interval": "5s",
            "index": {
                "max_result_window": 50000
            }
        },
        "mappings": {
            "properties": {
                "@timestamp": {
                    "type": "date",
                    "format": "strict_date_optional_time||epoch_millis"
                },
                "alert_id": {
                    "type": "keyword"
                },
                "timestamp": {
                    "type": "date",
                    "format": "strict_date_optional_time||epoch_millis"
                },
                "collector_id": {
                    "type": "keyword"
                },
                "host": {
                    "type": "keyword"
                },
                "source": {
                    "type": "keyword"
                },
                "processor": {
                    "type": "keyword"
                },
                "processed_at": {
                    "type": "date",
                    "format": "strict_date_optional_time||epoch_millis"
                },
                "alert_type": {
                    "type": "keyword"
                },
                "alert_category": {
                    "type": "keyword"
                },
                "severity": {
                    "type": "keyword"
                },
                "risk_score": {
                    "type": "integer"
                },
                "confidence": {
                    "type": "float"
                },
                "alert": {
                    "properties": {
                        "rule_id": {
                            "type": "keyword"
                        },
                        "rule_name": {
                            "type": "text",
                            "fields": {
                                "keyword": {
                                    "type": "keyword"
                                }
                            }
                        },
                        "description": {
                            "type": "text"
                        },
                        "title": {
                            "type": "text"
                        },
                        "evidence": {
                            "properties": {
                                "event_type": {
                                    "type": "keyword"
                                },
                                "process_name": {
                                    "type": "keyword"
                                },
                                "process_cmdline": {
                                    "type": "text"
                                },
                                "file_path": {
                                    "type": "text"
                                },
                                "network_info": {
                                    "type": "object"
                                }
                            }
                        },
                        "mitigation": {
                            "type": "text"
                        },
                        "references": {
                            "type": "keyword"
                        }
                    }
                },
                "source_events": {
                    "type": "nested",
                    "properties": {
                        "event_id": {
                            "type": "keyword"
                        },
                        "topic": {
                            "type": "keyword"
                        },
                        "timestamp": {
                            "type": "date"
                        },
                        "event_type": {
                            "type": "keyword"
                        }
                    }
                },
                "original_event": {
                    "properties": {
                        "event_id": {
                            "type": "keyword"
                        },
                        "timestamp": {
                            "type": "date"
                        },
                        "collector_id": {
                            "type": "keyword"
                        },
                        "host": {
                            "type": "keyword"
                        },
                        "source": {
                            "type": "keyword"
                        },
                        "event_type": {
                            "type": "keyword"
                        },
                        "event_category": {
                            "type": "keyword"
                        },
                        "message": {
                            "properties": {
                                "evt.type": {
                                    "type": "keyword"
                                },
                                "evt.category": {
                                    "type": "keyword"
                                },
                                "proc.name": {
                                    "type": "keyword"
                                },
                                "proc.exe": {
                                    "type": "text"
                                },
                                "proc.cmdline": {
                                    "type": "text"
                                },
                                "proc.pid": {
                                    "type": "integer"
                                },
                                "proc.ppid": {
                                    "type": "integer"
                                },
                                "proc.uid": {
                                    "type": "integer"
                                },
                                "proc.gid": {
                                    "type": "integer"
                                },
                                "fd.name": {
                                    "type": "text"
                                },
                                "net.sockaddr": {
                                    "type": "object"
                                },
                                "is_warn": {
                                    "type": "boolean"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}